#  MaxOpenConn: 40
#  ConnMaxLifeTime: 120
#  LogLevel: "warn"

# redis 配置
# Redis:
#   Host: "localhost"
#   Port: "6379"
#   Password: ""
#   DB: 0               # 连接到服务器后要选择的数据库
#   PoolSize: 20        # 连接池最大连接数
#   MinIdleConns: 10    # 连接池空闲连接数
#   IdleTimeout: 600    # 连接池空闲连接数

# 链路追踪配置
Trace:
  Endpoint: "localhost:6831"                        # 链路数据上报到 jaeger 的 agent 组件
  # Endpoint: "http://localhost:14268/api/traces"   # 链路数据上报到 jaeger 的 collector 组件
  ShutdownWaitTime: 5                               # 停止 span processors 的等待时间

REST:
  Host: "localhost"     # http 服务监听 ip
  Port: "9527"          # http 服务监听端口
  ExternalUrl: ""       # 如果配置了反向代理，此配置为反向代理的 url
  # JWT 配置
  JWT:
    Key: ""             # JWT 密钥

Priority: true          # 是否本地配置优先
Name: "go-scaffold"     # 应用名称
Env: "local"            # 当前环境（local、test 或 prod）
ShutdownWaitTime: 5     # 停止应用的等待时间

# 数据库配置
# DB:
#   Driver: "mysql"
#   Host: "127.0.0.1"
#   Port: "3306"
#   Database: "web-scaffold"
#   Username: "root"
#   Password: "root"
#   Options:
#     - "charset=utf8mb4"
#     - "parseTime=True"
#     - "loc=Local"
#   MaxIdleConn: 20
#   MaxOpenConn: 40
#   ConnMaxLifeTime: 120
#   LogLevel: "error"

#  Driver: "postgres"

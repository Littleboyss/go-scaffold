REST:
  Host: "localhost"     # http 服务监听 ip
  Port: "9527"          # http 服务监听端口
  ExternalUrl: ""       # 如果配置了反向代理，此配置为反向代理的 url
  # JWT 配置
  JWT:
    Key: ""             # JWT 密钥
    Expire: 604800      # JWT 过期时间

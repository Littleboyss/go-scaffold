Env: "local"            # 当前环境（local、test 或 prod）
ShutdownWaitTime: 5     # 停止应用的等待时间

# 全局日志
Log:
  Path: "logs/framework_%Y%m%d.log"     # 全局日志路径（相对于项目的根目录）
  Level: "info"                         # 日志等级
  Format: "text"                        # 日志格式化方式
  Mode: ""                              # 日志的模式（development（默认） 或 production）
  Caller: true                          # 日志是否打印调用者


#  MaxOpenConn: 40
#  ConnMaxLifeTime: 86400
#  LogLevel: "warn"

Redis:
  Host: "127.0.0.1"
  Port: "6379"
  Password: ""
  DB: 0 # 连接到服务器后要选择的数据库
  PoolSize: 20 # 连接池最大连接数
  MinIdleConns: 10 # 连接池空闲连接数
  IdleTimeout: 600 # 连接池空闲连接数

JWT:
  Key: ""
  Expire: 604800
